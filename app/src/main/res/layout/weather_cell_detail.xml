<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clipChildren="false"
            android:background="#F1F1F1"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/feels_like_image_type"
                        android:layout_width="26dp"
                        android:src="@drawable/thermometer"
                        android:layout_height="26dp"/>

                <TextView
                        android:id="@+id/feels_like_text"
                        tools:text="UV index"
                        android:text="Feels like"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/feels_like_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        tools:text="4"
                        android:text="4"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/uvi_image_type"
                        android:layout_width="26dp"
                        android:src="@drawable/uvi"
                        android:layout_height="26dp"/>

                <TextView
                        android:id="@+id/uvi_text"
                        tools:text="UV index"
                        android:text="UV index"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/uvi_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        tools:text="4"
                        android:text="4"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/wind_image_type"
                        android:layout_width="25dp"
                        android:src="@drawable/breeze"
                        android:layout_height="25dp"/>

                <TextView
                        android:id="@+id/wind_text"
                        android:text="Wind speed"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/wind_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        android:text="11 km/h"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/prep_image_type"
                        android:layout_width="25dp"
                        android:src="@drawable/precipitation"
                        android:layout_height="25dp"/>

                <TextView
                        android:id="@+id/prep_text"
                        android:text="Precipitation"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/prep_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        android:text="1%"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/humidity_image_type"
                        android:layout_width="25dp"
                        android:src="@drawable/humidity"
                        android:layout_height="25dp"/>

                <TextView
                        android:id="@+id/humidity_text"
                        android:text="Humidity"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/humidity_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        android:text="42%"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardElevation="24dp"
                app:cardCornerRadius="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#26C0FF"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingTop="14dp"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/pressure_image_type"
                        android:layout_width="25dp"
                        android:src="@drawable/pressure"
                        android:layout_height="25dp"/>

                <TextView
                        android:id="@+id/pressure_text"
                        android:text="Pressure"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/pressure_value"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/metropolis_bold"
                        android:textStyle="bold"
                        tools:text="4"
                        android:text="4"
                        android:textSize="24sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</HorizontalScrollView>